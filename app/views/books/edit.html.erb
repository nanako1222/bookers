<body>
  <h1>Editing Book</h1>

  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

    <div class = "field">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>

    <div class = "field">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>

    <div class = "actions">
      <%= f.submit 'Update Book' %>
    </div>

    <%= link_to "Show", book_path(@book.id) %>

    <a href ="/books">Back</a>


  <% end %>

</body>