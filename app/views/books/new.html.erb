<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

<div class = "field">
  <p>Title</p>
  <%= f.text_field :title %>
</div>

<div class = "field">
  <p>Body</p>
  <%= f.text_area :body %>
</div>

<div class = "actions">
  <%= f.submit 'Create Book' %>
</div>


<% end %>
